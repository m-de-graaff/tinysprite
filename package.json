{
  "name": "tinysprite-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "encoder",
    "examples/*",
    "website"
  ],
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel --filter ./examples/* dev",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "size": "size-limit",
    "ci": "pnpm lint && pnpm typecheck && pnpm test && pnpm -r build && pnpm size"
  },
  "size-limit": [
    { "name": "core", "path": "packages/core/dist/index.js" },
    { "name": "tilemap", "path": "packages/tilemap/dist/index.js" },
    { "name": "anim", "path": "packages/anim/dist/index.js" },
    { "name": "tracks", "path": "packages/tracks/dist/index.js" },
    { "name": "svg", "path": "packages/svg/dist/index.js" }
  ],
  "size-limit-config": {
    "plugins": ["@size-limit/file"]
  },
  "devDependencies": {
    "@size-limit/file": "^11.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "size-limit": "^11.1.4",
    "tsup": "^8.3.5",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3"
  }
}
