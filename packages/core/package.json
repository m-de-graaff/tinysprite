{
  "name": "@tinysprites/core",
  "version": "0.1.0",
  "description": "Ultra-tiny sprite decoder core for tinysprites",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./minimal": {
      "import": "./dist/minimal.js",
      "types": "./dist/minimal.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:esm && pnpm build:iife",
    "build:esm": "tsup",
    "build:iife": "rollup -c",
    "build:minimal": "tsup --config tsup.minimal.config.ts && rollup -c rollup.minimal.config.js",
    "dev": "tsup --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "sideEffects": false,
  "keywords": ["sprites", "js13k", "pixel-art", "tiny", "decoder"],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "rollup": "^4.6.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}